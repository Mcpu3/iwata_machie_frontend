import axios from "axios";
import React from "react";

const mnewpost_id_re = ({ data, error }) => {
    if (error) {
        return <div>An error occured: {error.message}</div>
    }
    const id = data.id
    const thumbsup = data.thumbsup
    const heart = data.heart
    const smile = data.smile
    const astonished = data.astonished
    const e_mail = data.e_mail
    return (
        <div>
            <dl>
                <dt>Id</dt>
                <dd>{id}</dd>
                <dt>Thumbsup</dt>
                <dd>{thumbsup}</dd>
                <dt>Heart</dt>
                <dd>{heart}</dd>
                <dt>Smile</dt>
                <dd>{smile}</dd>
                <dt>Astonished</dt>
                <dd>{astonished}</dd>
                <dt>e_mail</dt>
                <dd>{e_mail}</dd>
            </dl>
        </div>
    )
}

mnewpost_id_re.getInitialProps = async ctx => {
    try {
        const response = await axios.post("http://localhost:8000/api/v1/mock/post/1/new_reaction/")
        const data = response.data
        return { data }
    } catch (error) {
        return { error }
    }
}

export default mnewpost_id_re